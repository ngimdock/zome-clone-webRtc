    <style>
      .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
      }

      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        background-color: blueviolet;
      }
    </style>
  </head>
  <body class="relative px-4 flex justify-center">
    <div class="video-grid" id="grid"></div>
  </body>
